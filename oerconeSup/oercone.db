record(bo, "$(P)SIM")
{
    field(SCAN, "Passive")
    field(DTYP, "Soft Channel")
    field(ZNAM, "NO")
    field(ONAM, "YES")
    field(VAL, "$(RECSIM=0)")
    field(PINI, "YES")
}

record(bo, "$(P)DISABLE")
{
    field(DESC, "Disable comms")
    field(PINI, "YES")
    field(VAL, "$(DISABLE=0)")
    field(OMSL, "supervisory")
    field(ZNAM, "COMMS ENABLED")
    field(ONAM, "COMMS DISABLED")
}

record(ai, "$(P)PRESSURE")
{
	field(DESC, "Pressure")
	field(DTYP, "stream")
    field(INP, "@oercone.proto getPressure $(PORT)")
	field(SCAN, "5 second")
	field(EGU, "mbar")
}

record(mbbi, "$(P)UNITS") 
{
    field(SCAN, "1 second")
    field(DTYP, "stream")
    field(INP,  "@oercone.proto getUnits $(PORT)")
    field(ZRST, "mbar")
    field(ONST, "Torr")
    field(TWST, "Pascal")
	field(THST, "Micron")
}

record(mbbo, "$(P)UNITS:SP") 
{
    field(DTYP, "stream")
    field(OUT,  "@oercone.proto setUnits $(PORT)")
    field(ZRST, "mbar")
    field(ONST, "Torr")
    field(TWST, "Pascal")
	field(THST, "Micron")
}

alias("$(P)UNITS", "$(P)UNITS:SP:RBV")
